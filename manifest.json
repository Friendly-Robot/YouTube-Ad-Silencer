{
  "manifest_version": 2,
  "name": "YouTube Ad Silencer",
  "short_name": "YouTube Ad Silencer",
  "description": "Silence > Advertisements!",
  "version": "1.0.0.1",
  "author": "Andy Li",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "browser_action": {
    "default_icon": "icon128.png", 
    "default_title": "YouTube Ad Silencer"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://*.youtube.com/*"
  ],
  "web_accessible_resources": ["content.js"],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}